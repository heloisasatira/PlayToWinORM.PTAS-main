{{#if jogo}}
  <h1>Atualizar jogo</h1>
  <form action="/jogo/{{jogo.id}}/update" method="post">
{{else}}
  <h1> Cadastrar novo jogo</h1>
  <form action="/jogo/novo" method="post">
{{/if}}

  <div>
    <label for="nickname">Título</label>
    <input type="text" id="titulo" name="titulo" value="{{jogo.titulo}}" />
  </div>
  <div>
    <label for="nome">Descrição</label>
    <input type="text" id="descricao" name="descricao" value="{{jogo.descricao}}" />
  </div>
  <div>
    <label for="nome">Preço</label>
    <input type="text" id="preco" name="preco" value="{{jogo.preco}}" />
  </div>
  {{#if jogo}}
    <input type="submit" value="Salvar">
  {{else}}
    <input type="submit" value="Cadastrar" />
  {{/if}}
</form>